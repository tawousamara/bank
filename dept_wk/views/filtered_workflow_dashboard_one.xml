<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
    
        <record id="view_wk_workflow_dashboard_tree_filtered_one" model="ir.ui.view">
            <field name="name">wk.workflow.dashboard.tree.filtered</field>
            <field name="model">wk.workflow.dashboard</field>
            <field name="arch" type="xml">
                <tree string="Workflow Dashboard Filtered one">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="date_fin"/>
                    <field name="nom_client"/>
                    <field name="state"/>
                    <field name="montant_demande"/>
                    <field name="assigned_to_finance"/>
                </tree>
            </field>
        </record>

        <record id="action_wk_workflow_dashboard_filtered_one" model="ir.actions.act_window">
            <field name="name">Filtered Workflows</field>
            <field name="res_model">wk.workflow.dashboard</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_wk_workflow_dashboard_tree_filtered_one"/>
            <field name="domain">[
                ('state', '=', '2'),
                ('states.sequence', '=', 2),
                ('states.state_finance', 'in', ['finance_1', 'finance_3'])
            ]</field>
        </record>

    </data>
</odoo>
