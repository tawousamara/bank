<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="test_form" model="ir.ui.view">
        <field name="name">wk.report.one.form</field>
        <field name="model">wk.report.one</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="folder_number" />
                    </group>   
                    <field name="line_ids" readonly="1">
                        <tree>
                            <field name="customer_name" />
                            <field name="branch" />
                            <field name="entry_date" />
                            <field name="date_num_branch" />
                            <field name="date_num_finance" />
                            <field name="date_num_risk" />
                            <field name="date_num_commercial" />
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="test_tree" model="ir.ui.view">
        <field name="name">wk.report.one.tree</field>
        <field name="model">wk.report.one</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="folder_number" />
            </tree>
        </field>
    </record>

    <record id="wk_report_one" model="ir.actions.act_window">
        <field name="name">التقرير 1</field>
        <field name="res_model">wk.report.one</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>